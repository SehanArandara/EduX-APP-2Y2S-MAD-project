<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="415dp"
        android:layout_height="276dp"
        android:layout_marginBottom="61dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138"
        app:srcCompat="@mipmap/ic_launcher_top_bg_foreground" />


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="355dp"
        android:layout_height="442dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="280dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="16sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"

            android:paddingStart="5sp"
            android:paddingTop="8sp"
            android:text="Your classes"
            android:textAlignment="center"
            android:textColor="@color/Pcolor"
            android:textSize="24sp"
            app:drawableStartCompat="@drawable/ic_baseline_bookmarks_24book" />

        <TextView
            android:id="@+id/addclass"
            android:layout_width="280dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="16sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"

            android:drawableStart="@drawable/ic_baseline_menu_book_24df"
            android:paddingStart="5sp"
            android:paddingTop="8sp"
            android:text="Add class"
            android:textAlignment="center"
            android:textColor="@color/Pcolor"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="281dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="16sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"

            android:drawableStart="@drawable/ic_baseline_checklist_rtl_24ceck"
            android:paddingStart="5sp"
            android:paddingTop="5sp"
            android:text="Add quiz"
            android:textAlignment="center"
            android:textColor="@color/Pcolor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="281dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="16sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"

            android:drawableStart="@drawable/ic_baseline_post_add_24pp"
            android:paddingStart="5sp"
            android:paddingTop="8sp"
            android:text="Add blog post"
            android:textAlignment="center"
            android:textColor="@color/Pcolor"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/showQuizes"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="16sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"

            android:drawableStart="@drawable/ic_baseline_checklist_rtl_24ceck"
            android:paddingStart="5sp"
            android:paddingTop="8sp"
            android:text="Show Quiz"
            android:textAlignment="center"
            android:textColor="@color/Pcolor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/account"
            android:layout_width="280dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="16sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"

            android:drawableStart="@drawable/ic_baseline_account_box_24ac"
            android:paddingStart="5sp"
            android:paddingTop="8sp"
            android:text="Your account"
            android:textAlignment="center"
            android:textColor="@color/Pcolor"
            android:textSize="24sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="180dp"
        android:layout_height="173dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_launcher_teach_home" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="15dp"
        android:text=""
        android:textColor="@color/pgrey"
        android:textSize="30sp"
        android:fontFamily="@font/oswald"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>