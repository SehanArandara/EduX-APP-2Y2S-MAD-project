<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.supuni.ReadBook">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="413dp"
        android:layout_height="281dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_top_bg_foreground" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="165dp"
        android:layout_height="184dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayout01"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:srcCompat="@drawable/ic_launcher_teach_home" />

    <TextView
        android:id="@+id/REbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"

        android:text="Book Info"
        android:textColor="#FEFEFE"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn2"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Name :"
                android:textAlignment="viewStart"
                android:textColor="@color/p_grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/r_title"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginBottom="15sp"
                android:ems="10"
                android:paddingStart="10sp"
                android:paddingBottom="15sp"
                android:textAlignment="textStart"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textsView14"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:text="Author :"
                android:textAlignment="viewStart"
                android:textColor="@color/p_grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/r_author"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginBottom="15sp"
                android:ems="10"
                android:paddingStart="10sp"
                android:paddingBottom="15sp"
                android:textAlignment="textStart"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViesw14"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:text="No Of Books :"
                android:textAlignment="viewStart"
                android:textColor="@color/p_grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/r_noOfBook"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginBottom="15sp"
                android:ems="10"
                android:paddingStart="10sp"
                android:paddingBottom="15sp"
                android:textAlignment="textStart"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textVieaw14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="How to Contact :"
                android:textAlignment="viewStart"
                android:textColor="@color/p_grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/r_contact"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginBottom="15sp"
                android:ems="10"
                android:paddingStart="10sp"
                android:paddingBottom="15sp"
                android:textAlignment="textStart"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="295dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/editBtn"
                android:layout_width="130dp"
                android:layout_height="49dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn1"
                android:text="Edit Book"
                android:textColor="#FEFEFE"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LinearLayout01" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/deletebook"
                android:layout_width="130dp"
                android:layout_height="49dp"
                android:background="@drawable/btn1"
                android:padding="10dp"
                android:text="Delete book"
                android:textColor="#FEFEFE"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LinearLayout01" />

        </LinearLayout>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>