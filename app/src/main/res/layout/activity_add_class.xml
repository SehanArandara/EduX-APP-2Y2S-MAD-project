<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonateBook">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="413dp"
        android:layout_height="281dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_top_bg_foreground" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="165dp"
        android:layout_height="184dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayout01"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:srcCompat="@drawable/ic_launcher_teach_home" />

    <TextView
        android:id="@+id/AddClassesH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"

        android:text="Add class"
        android:textColor="#FEFEFE"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="337dp"
        android:layout_height="341dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7">

        <EditText
            android:id="@+id/subjectTv"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/btn2"

            android:ems="10"
            android:gravity="center"
            android:hint="Enter Subject"
            android:inputType="textPersonName"
            android:paddingStart="10sp"
            android:paddingBottom="15sp"
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/gradeTV"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/btn2"

            android:ems="10"
            android:gravity="center"
            android:hint="Enter Grade"
            android:inputType="textPersonName"
            android:paddingStart="10sp"
            android:paddingBottom="15sp"
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/ZoomLinkTv"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/btn2"

            android:ems="10"
            android:gravity="center"
            android:hint="Add Zoom Link"
            android:inputType="textPersonName"
            android:paddingStart="10sp"
            android:paddingBottom="15sp"
            android:textAlignment="viewStart" />


        <EditText
            android:id="@+id/dateTv"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/btn2"

            android:ems="10"
            android:gravity="center"
            android:hint="Enter date"
            android:inputType="date|datetime"
            android:paddingStart="10sp"
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/timeTv"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15sp"

            android:background="@drawable/btn2"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter Time"
            android:inputType="time"
            android:paddingStart="10sp"
            android:textAlignment="viewStart" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addClass"
        android:layout_width="130dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/btn1"
        android:text="Add class"
        android:textColor="#FEFEFE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout01"
        app:layout_constraintVertical_bias="0.175" />


</androidx.constraintlayout.widget.ConstraintLayout>